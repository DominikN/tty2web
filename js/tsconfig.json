{
  "compilerOptions": {
      "strictNullChecks": true,
      "noUnusedLocals" : true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "outDir": "./dist/",
      "declaration": true,
      "sourceMap": true,
      "target": "es5",
      "module": "commonjs",
      "lib": ["es2015", "dom"],
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
          "*": ["./typings/*"]
      },
      "skipLibCheck": true
  },
    "exclude": [
      "node_modules"
    ]
}
